{
  "restApiRoot": "/api",
  "host": "0.0.0.0",
  "port": 3000,
  "remoting": {
    "context": false,
    "rest": {
      "handleErrors": false,
      "normalizeHttpPath": false,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "100kb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    },
    "cors": false
  },
  "scriptsDirectory": "scripts",
  "sqlScripts": {
    "directory": "sql",
    "foreignKeysClean": "foreign_keys_clean",
    "foreignKeysGenerate": "foreign_keys_generate",
    "functionsGenerate": "functions_generate"
  },
  "email": {
    "shoppingList": {
      "template": "./server/views/mail.ejs"
    }
  }
}
