FROM node:9.4.0-stretch

# Install pm2 so we can run our application
RUN npm i -g pm2

# Add application files
ADD ./liste_courses/server /applis/liste_courses/server
ADD ./liste_courses/node_modules /applis/liste_courses/node_modules

#Expose the port
EXPOSE 3000

COPY ./liste_courses/server/common.sh /
COPY ./liste_courses/server/docker-entrypoint.sh /
RUN chmod 755 /docker-entrypoint.sh

ENTRYPOINT ["/docker-entrypoint.sh"]